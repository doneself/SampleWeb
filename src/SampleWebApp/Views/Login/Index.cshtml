
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <style>
        .main {
            margin:0 auto;
            width:600px;
        }
        .main .header{
            text-align:center;
        }
        form .form-item{
            margin-bottom:20px;
            text-align:center;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="header">
            <h2>Sign In</h2>
        </div>
        <div>
            <form>
                <div class="form-item">
                    <label>UserName:</label>
                    <input type="text" value="" name="UserName"/>
                </div>
                <div class="form-item">
                    <label>Password:</label>
                    <input type="password" value="" name="Password"/>
                </div>
                <div class="form-item">
                    <input type="button" value="Submit" id="sign-in" />
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript">
        window.onload = function () {
            var signInButton = this.document.getElementById("sign-in");
            var userNameInput = document.querySelectorAll('[name="UserName"]')[0];
            var passwordInput = document.querySelectorAll('[name="Password"]')[0];
        }
    </script>
</body>
</html>
